<h1 class="pg-title"><u>Email Notifications</u></h1>
<div class="tbl-wrapper">
  <table class="crm-tbl">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= simple_format(post.content) %></td>
          <td><%= link_to 'PDF', post_path(post, format: :pdf) %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<div class="tbl-wrapper">
  <h3>Import Reports</h3>
  <%= link_to 'New Report', new_post_path %>
  <br/>
  <%= link_to "Reports PDF", posts_path(format: :pdf) %>
</div>
